<div class="basic__container">
    <form action="/login" method="POST" class="basic__element principal__font">
        <h1>Bem vindo ao link brabo</h1>
        <input class="principal__font" name="nickName" type="text" placeholder="nickname">
        <input class="principal__font" name="password" type="password" placeholder="password">
        <button class="principal__font" type="submit">LOGIN</button>
        {{> successMessage}}
        {{> errorMessage}}
        <a href="/registro">Criar token de acesso</a>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const savedTheme = localStorage.getItem('selectedTheme');
        if (savedTheme) {
            const theme = JSON.parse(savedTheme);
            applyTheme(theme);
        }
    });

    function applyTheme(theme) {
        for (const style in theme) {
            document.documentElement.style.setProperty(style, theme[style]);
        }
    }
</script>